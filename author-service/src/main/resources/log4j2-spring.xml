<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="Наш паттерн відображення логів: %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
<!--        <File name="MyFile" fileName="logs/app.log">-->
<!--            <PatternLayout>-->
<!--                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>-->
<!--            </PatternLayout>-->
<!--        </File>-->
        <RollingFile name="RollingFile"
                     fileName="${spring:logging.file.name}.log"
                     filePattern="${spring:logging.file.pattern}.%d{yyyy-MM-dd}.%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <!--        <Elasticsearch name="Elasticsearch">-->
        <!--            <JestHttp serverUris="https://172.29.112.1:9200/" >-->
        <!--                <XPackAuth>-->
        <!--                    <BasicCredentials username="${spring:elasticsearch.username}" password="${spring:elasticsearch.password}" />-->
        <!--                </XPackAuth>-->
        <!--            </JestHttp>-->
        <!--        </Elasticsearch>-->
        <Async name="Async">
<!--            <AppenderRef ref="MyFile"/>-->
            <AppenderRef ref="RollingFile"/>
            <!--            <AppenderRef ref="Elasticsearch"/>-->
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>